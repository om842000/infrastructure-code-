pipline{
    agent any{
        tool{
            terraform  'Terraform v1.7.5'

    }
    stages{
        stage('git checkout'){
            steps{
                git credentialsId: 'githubtoken', url: 'https://github.com/om842000/Terraform-infra.git'
            }
        }
        stages('terraform init'){
            steps{
            sh 'terraform init'
            }
        }
        stages('terraform apply'){
            steps{
            sh 'terraform apply -auto approve'
            }
        }
    }
}



